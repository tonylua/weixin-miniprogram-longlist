Page {
  text-align: center;
  padding: 0 20rpx;
}

.wrapper {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  margin: 50rpx auto;
  height: 1000rpx;
  width: 80%;
  overflow-y: scroll;
  border: 4rpx solid #d8f8fd;
  background: #f3fefe;
}
.inner {
  overflow: hidden;
}
.item {
  background: #f5f5f5;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
}
.item::after {
  content: "";
  display: inline-block;
  width: 100%;
  height: .5rpx;
  bottom: .5rpx;
  position: absolute;
  left: 0;
  right: 0;
  background: rgb(76, 188, 253);
}